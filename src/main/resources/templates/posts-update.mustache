{{>layout/header}}

<h1>게시글 수정</h1>

<div>
    <div>
        <form>
            <div class="form-group">
                <label for="id">글번호</label>
                <input type="text" id="id" value="{{post.id}}" readonly>
            </div>

            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" id="title" value="{{post.title}}">
            </div>
            <div class="form-group">
                <label for="author">작성자</label>
                <input type="text" id="author" value="{{post.author}}" readonly>
            </div>
            <div class="form-group">
                <label for="content">내용</label>
                <textarea id="content">{{post.content}}</textarea>
            </div>
        </form>
        <a href="/" role="button" class="btn">취소</a>
        <button type="button" class="btn" id="btn-update">수정완료</button>
        <button type="button" class="btn" id="btn-delete">삭제</button>
    </div>
</div>

{{>layout/footer}}